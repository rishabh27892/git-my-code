<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerVertical="true"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        tools:context="com.rishabh.chauhan.justjava.MainActivity">
        <EditText
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:textAllCaps="true"
            android:cursorVisible="true"
            android:id="@+id/enter"

            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="QUANTITY"
            android:paddingTop="32dp"
            android:textColor="@android:color/black"
            android:textAllCaps="true"
            android:layout_below="@id/enter"
            android:id="@+id/quant_text_view"/>
        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:id="@+id/linear_layout"
            android:layout_below="@id/quant_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp"
            tools:context="com.rishabh.chauhan.justjava.MainActivity">
            <Button
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:id="@+id/min_button"
                android:text="-"
                android:onClick="decrement"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:id="@+id/quantity_text_view"
                android:textColor="@android:color/black"
                android:padding="16sp"
                />
            <Button
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:text="+"
                android:onClick="increment"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_toRightOf="@id/linear_layout"
            android:paddingLeft="32dp"
            android:layout_below="@id/enter"
            android:paddingTop="32dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Special Type of Drink"
                android:textAllCaps="true"
                android:textColor="@android:color/black"/>
            <Button
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="capaccino"
                android:onClick="cap"
                android:id="@+id/cap"
                />
            <Button
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="expresso"
                android:onClick="exp"
                android:id="@+id/exp"
                />
            <Button
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="cold-coffee"
                android:onClick="col"
                android:id="@+id/col"
                />
        </LinearLayout>
        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:id="@+id/linear_layout_topping_main"
            android:layout_below="@id/linear_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Extra Toppings"
                android:textColor="@android:color/black"
                android:textAllCaps="true"
                />
            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:id="@+id/linear_layout_topping1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="16sp"
                android:layout_centerVertical="true"
                >
                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="sug"
                    android:id="@+id/check1"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="extra sugar"
                    android:textAllCaps="true"
                    android:id="@+id/topping_text_view1"
                    />
            </LinearLayout>
            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:id="@+id/linear_layout_topping2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="16sp"
                android:layout_centerVertical="true"
                >
                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="whip"
                    android:id="@+id/check2"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="whip Topping"
                    android:textAllCaps="true"
                    android:id="@+id/topping_text_view2"
                    />
            </LinearLayout>
            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:id="@+id/linear_layout_topping3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="16sp"
                android:layout_centerVertical="true"
                >
                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="carm"
                    android:id="@+id/check3"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Carmel shot"
                    android:textAllCaps="true"
                    android:id="@+id/topping_text_view3"
                    />
            </LinearLayout>
             </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="order summary"
            android:textColor="@android:color/black"
            android:textAllCaps="true"
            android:id="@+id/order_summary_text_view"
            android:layout_below="@id/linear_layout_topping_main"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0$"
            android:id="@+id/price_text_view"
            android:layout_below="@id/order_summary_text_view"
            android:textColor="@android:color/black"
            android:padding="16sp"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/price_text_view"
            android:id="@+id/order"
            android:text="ORDER"
            android:onClick="submitOrder"
            />
    </RelativeLayout>
</ScrollView>