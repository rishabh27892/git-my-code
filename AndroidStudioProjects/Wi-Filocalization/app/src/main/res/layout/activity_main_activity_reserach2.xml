<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingTop="10dp"
    android:paddingLeft="10dp"
    tools:context="com.rishabh.chauhan.wi_filocalization.MainActivity_reserach2">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="User Interface: " />
    <Button
        android:layout_width="35dp"
        android:layout_height="30dp"
        android:text="AP"
        android:textSize="8dp"
        android:id="@+id/B_ap"
        android:onClick="AP"/>
    <Button
        android:layout_width="47dp"
        android:layout_height="30dp"
        android:text="Store"
        android:textSize="8dp"
        android:onClick="store"
        android:id="@+id/B_store"/>
    <Button
        android:layout_width="47dp"
        android:layout_height="30dp"
        android:text="Estimate"
        android:textSize="8dp"
        android:onClick="est"
        android:id="@+id/B_check"/>


    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

    <LinearLayout
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="DISPLAY"
            android:textColor="#000000"
            android:textSize="12dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="MESSAGE"
            android:id="@+id/T_MESSAGE"
            android:textSize="10dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/T_STATUS"
            android:textSize="10dp"
            android:text="STATUS"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/T_ALERT"
            android:textSize="10dp"
            android:text="ALERT"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/T_INFO"
            android:textSize="10dp"
            android:text="INFO"/>

    </LinearLayout>
        <RelativeLayout
            android:layout_width="155dp"
            android:layout_height="wrap_content">
            <Button
                android:layout_width="60dp"
                android:layout_height="29dp"
                android:text="FWD"
                android:onClick="fwd_fwd"
                android:textSize="7dp"
                android:layout_marginLeft="30dp"
                android:id="@+id/B_fwd"/>
            <Button
                android:layout_width="60dp"
                android:layout_height="29dp"
                android:text="LT"
                android:onClick="lt_lt"
                android:textSize="7dp"
                android:id="@+id/B_lt"
                android:layout_below="@id/B_fwd"/>
            <Button
                android:layout_width="60dp"
                android:layout_height="29dp"
                android:text="RT"
                android:onClick="rt_rt"
                android:textSize="7dp"
                android:layout_toRightOf="@id/B_lt"
                android:layout_below="@id/B_fwd"
                android:id="@+id/B_rt"/>
            <Button
                android:layout_width="30dp"
                android:layout_height="56dp"
                android:layout_toRightOf="@id/B_rt"
                android:text="+"
                android:id="@+id/B_align"
                android:onClick="align_align"/>
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="40dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:text="Enter destination (1-8): "
            />
        <EditText
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:id="@+id/T_Dest"
            android:inputType="number|none"
            android:maxLength="1"
            android:digits="01234567"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="GO"
            android:onClick="go_go"
            android:id="@+id/B_GO"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/BSSID"
            android:textSize="10dp"
            android:paddingLeft="10dp"
            android:text="BSSID"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/RAW"
            android:textSize="10dp"
            android:paddingLeft="20dp"
            android:text="Refpoint:"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="10dp"
            android:paddingLeft="8dp"
            android:text="1"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="10dp"
            android:paddingLeft="15dp"
            android:text="2"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="10dp"
            android:paddingLeft="15dp"
            android:text="3"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="10dp"
            android:paddingLeft="14dp"
            android:text="4"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="10dp"
            android:paddingLeft="14dp"
            android:text="5"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="10dp"
            android:paddingLeft="14dp"
            android:text="6"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="10dp"
            android:paddingLeft="15dp"
            android:text="7"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="10dp"
            android:paddingLeft="15dp"
            android:text="8"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="10dp"
            android:paddingLeft="10dp"
            android:text="chk"/>



        </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ListView
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:id="@+id/list1"
            android:textSize="5sp">
        </ListView>
        <ListView
            android:layout_width="20dp"
            android:layout_height="match_parent"
            android:id="@+id/list2"
            android:textSize="5dp">
        </ListView>
        <ListView
            android:layout_width="20dp"
            android:layout_height="match_parent"
            android:id="@+id/list3"
            android:textSize="5dp">
        </ListView>
        <ListView
            android:layout_width="20dp"
            android:layout_height="match_parent"
            android:id="@+id/list4"
            android:textSize="5dp">
        </ListView>
        <ListView
            android:layout_width="20dp"
            android:layout_height="match_parent"
            android:id="@+id/list5"
            android:textSize="5dp">
        </ListView>

        <ListView
            android:layout_width="20dp"
            android:layout_height="match_parent"
            android:id="@+id/list6"
            android:textSize="5dp">
        </ListView>
        <ListView
            android:layout_width="20dp"
            android:layout_height="match_parent"
            android:id="@+id/list7"
            android:textSize="5dp">
        </ListView>
        <ListView
            android:layout_width="20dp"
            android:layout_height="match_parent"
            android:id="@+id/list8"
            android:textSize="5dp">
        </ListView>
        <ListView
            android:layout_width="20dp"
            android:layout_height="match_parent"
            android:id="@+id/list9"
            android:textSize="5dp">
        </ListView>
        <ListView
            android:layout_width="20dp"
            android:layout_height="match_parent"
            android:id="@+id/list10"
            android:textSize="5dp">
        </ListView>

    </LinearLayout>



</LinearLayout>

